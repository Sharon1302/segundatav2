<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:elevation="10dp"
    android:padding="10dp">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="Configuration"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="Operating Mobile"
            android:layout_gravity="center" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorPrimary" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/phone"
     />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorPrimary" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginTop="2dp"
            android:text="Trader"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal" />
        <EditText
            android:id="@+id/responsecode"
            android:singleLine="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/editext_border"
            android:drawablePadding="8dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:hint="Trader"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorPrimary" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginTop="2dp"
            android:text="Operating Response Number"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal" />
        <EditText
            android:id="@+id/responseno"
            android:singleLine="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/editext_border"
            android:textStyle="bold"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="Operating Response Number"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorPrimary" />
        <CheckBox
            android:id="@+id/noti"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginTop="2dp"
            android:text="Send Operator response to server as soon as they are received"
            android:textColor="@color/colorAccent"
            android:textSize="9sp"
            android:textStyle="normal" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorPrimary" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginTop="2dp"
            android:text="Pause Duration ( in seconds )"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal" />
        <EditText
            android:id="@+id/duration"
            android:singleLine="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/editext_border"
            android:drawablePadding="8dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:hint="Pause Duration ( in seconds )"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />


        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/submit"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:background="@drawable/loginbutton_selector"
            android:backgroundTint="#0E6251"
            android:padding="3dp"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:textStyle="bold" />



    </LinearLayout>



</RelativeLayout>